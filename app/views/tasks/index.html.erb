<h1>Lista zadań</h1>

<!-- poprawić kolejność -->
<span id="current_date" class="label label-warning"><%= Date.today %></span>
<span id="current_date_label" class="label label-warning current_date">Aktualna data:</span>


<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th>Wykonano?</th>
    <th class='table-name'>Nazwa</th>
    <th>Dni pozostało</th>
    <th>Data</th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @tasks.each do |task| %>
  <% diff = date_diff(task.date) %>
  <tr>
    <td><button class='btn btn-info yes-no'><%= task.done ? "TAK" : "NIE" %></button></td>
    <td><h1><span class="label label-success"><%= task.name %></span><h1></td>
    <td>
      <span id="days_left" class="label"><%= diff %></span>
      <div class="progress <%= progress_class(diff) %>">
        <div class="bar" style="width: <%= diff %>%;"></div>
      </div>
    </td>
    <td><span class="label label-warning"><%= task.date %></span></td>

    <td class='btn-group  table-operations'>
        <%= link_to "Pokaż", task, class: "btn btn-info" %>
        <%= link_to "Edytuj", edit_task_path(task), class: "btn btn-info" %>
        <%= link_to "Usuń", task, confirm: 'Jesteś pewien?', method: :delete,  class: "btn btn-danger" %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'Nowe zadanie', new_task_path %>
